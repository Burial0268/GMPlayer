{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  // Match existing code style
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "ignorePatterns": [
    "dist",
    "node_modules",
    "deps",
    "*.d.ts",
    "auto-imports.d.ts",
    "components.d.ts"
  ]
}
